{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "Federated": "arn:aws:iam:::oidc-provider/"
            },
            "Action": "sts:AssumeRoleWithWebIdentity",
            "Condition": {
                "StringEquals": {
                    ":sub": "system:serviceaccount:default:default",
                    ":aud": "sts.amazonaws.com"
                }
            }
        }
    ]
}
